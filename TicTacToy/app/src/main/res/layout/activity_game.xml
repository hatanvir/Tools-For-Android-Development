<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context="com.example.tanvir.tictactoy.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/Button1XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
        />

        <Button
            android:id="@+id/Button2XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />

        <Button
            android:id="@+id/Button3XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/Button4XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:padding="15dp"
            android:background="@drawable/buttonstyle" />

        <Button
            android:id="@+id/Button5XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />

        <Button
            android:id="@+id/Button6XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/Button7XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
        />

        <Button
            android:id="@+id/Button8XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
        />

        <Button
            android:id="@+id/Button9XmlId"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40dp"
            android:background="@drawable/buttonstyle" />
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1XmlID"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp"
            android:paddingTop="2dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView2XmlID"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ResetButtonXmlID"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:background="@android:color/holo_blue_bright"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
